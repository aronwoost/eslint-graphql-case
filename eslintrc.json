{
  "overrides": [
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "parserOptions": {
        "operations": ["*.graphql"],
        "schema": "./schema.graphql"
      },
      "rules": {
        "@graphql-eslint/known-fragment-names": "error"
      }
    }
  ]
}
